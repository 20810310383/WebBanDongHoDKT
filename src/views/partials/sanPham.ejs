<!-- START BODY -- SAN PHAM -->
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
  <div class="col-md-7 heading-section text-center ftco-animate">
      <span class="subheading">Rượu trong cửa hàng</span>
    <h2 style="color: rgb(85, 15, 15);" >Sản phẩm của LIQUOR STORE </h2>
  </div>
</div>
        <div class="row">
            <% if (allSP && allSP.length > 0) { %>
                <% allSP.forEach(function(allsp) { %>
            <div class="col-md-3 d-flex">
                <div class="product ftco-animate">
                    <div class="img d-flex align-items-center justify-content-center" style="background-image: url('images/upload/<%= getRelativeImagePath(allsp.Image) %>');">
                        <div class="desc">
                            <p class="meta-prod d-flex">
                                <!-- <a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-shopping-bag"></span></a> -->
                                <a href="#" class="d-flex align-items-center justify-content-center"><span class="flaticon-heart"></span></a>
                                <a href="/ctsp?idCTSP=<%= allsp._id %>" class="d-flex align-items-center justify-content-center"><span class="flaticon-visibility"></span></a>
                            </p>
                        </div>
                    </div>
                    <div class="text text-center">
                        <% if(allsp.Sale_New === "New") { %>
                            <span class="sale" 
                                style="position: relative; 
                                        top: -370px;
                                        left: -23.5px;
                                        background-color: rgb(38, 0, 255);
                                        color: white;
                                        font-size: 19px;
                                        padding: 1px 9px;
                            "><%= allsp.Sale_New %></span>
                      <% } else if (allsp.Sale_New === "Sale") { %>
                            <span class="sale" 
                                style="position: relative; 
                                        top: -370px;
                                        left: -26px;
                                        background-color: red;
                                        color: white;
                                        font-size: 19px;
                                        padding: 1px 9px;
                            "><%= allsp.Sale_New %></span>                        
                      <% } else { %>
                            <span class="sale" 
                                style="position: relative; 
                                        top: -370px;
                                        left: -28px;
                                        background-color: rgb(240, 43, 141);
                                        color: rgb(255, 255, 255);
                                        font-size: 19px;
                                        padding: 1px 9px;
                            "><%= allsp.Sale_New %></span>
                      <% } %>  
                     
                        <span class="text-left mr-4">
                            <a href="#" class="mr-2">5.0</a>
                            <a href="#"><span class="fa fa-star"></span></a>
                            <a href="#"><span class="fa fa-star"></span></a>
                            <a href="#"><span class="fa fa-star"></span></a>
                            <a href="#"><span class="fa fa-star"></span></a>
                            <a href="#"><span class="fa fa-star"></span></a>
                        </span>
                      
                        <a href="/ctsp?idCTSP=<%= allsp._id %>"><h2><%= allsp.TenSP %></h2></a>
                        <p class="mb-0">
                            <span style="font-size: 17px; color: grey; font-weight: 400;" class="price price-sale"><%= formatCurrency(allsp.GiaCu) %></span>
                            <span style="font-size: 20px; color: red; font-weight: 600;" class="price"><%= formatCurrency(allsp.GiaBan) %></span>
                        </p>
                    </div>
                </div>
            </div>
                <% }); %> 
            <% } %> 

        </div>
        <!-- <div class="row justify-content-center">
            <div class="col-md-4">
                <a href="product.html" class="btn btn-primary d-block">View All Products <span class="fa fa-long-arrow-right"></span></a>
            </div>
        </div> -->

        <%- include('phantrang.ejs') %>
        

    </div>
</section>

<script>
    function getRelativeImagePath(absolutePath) {
            const rootPath = '<%= rootPath.replace(/\\/g, "\\\\") %>';
            const relativePath = absolutePath ? absolutePath.replace(rootPath, '').replace(/\\/g, '/').replace(/^\/?images\/upload\//, '') : '';
            return relativePath;
        }


    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
    }
</script>
<!-- END BODY -- SAN PHAM -->